#!/usr/bin/env sh

set -e

cmd=$*

container_name="spaceholder-cc-web"
container_id=$(docker ps --no-trunc --filter name=${container_name} --format {{.ID}})

if [ -z "$cmd" ]; then
  echo "[ bin/exec ] ğŸš¨ No command specified!"
  exit 1
fi

if [ -z $container_id ]; then
  echo "[ bin/exec ] ğŸš¨ Couldn't find a container named \"$container_name.\" Have you run \"bin/start\" in another Terminal?"
  exit 1
else
  echo "[ bin/exec ] ğŸ¤– Executing \"$cmd\" inside container with ID = $container_id..."
  docker exec -it $container_id $cmd
fi
